<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp">
    <ImageView
        android:id="@+id/img_sp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/sp1_1"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/title_sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_sp"
        android:text="title"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/gia_sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_sp"
        android:layout_below="@id/title_sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:text="79.000Ä‘"
        android:textSize="14sp"/>
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/icon_diemthg"
        android:layout_toRightOf="@+id/img_sp"
        android:layout_below="@id/gia_sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/diem_sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_sp"
        android:layout_below="@id/gia_sp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="30dp"
        android:text="10"
        android:textColor="@color/black"/>
</RelativeLayout>